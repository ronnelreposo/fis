        <Button x:Name="calcelButton"   Content="CANCEL" Grid.Row="3" Grid.Column="2" Margin="20"/>
        <ScrollViewer Grid.Row="2" Grid.ColumnSpan="4" Margin="0,0,0,0">
            <GroupBox x:Name="groupFamilyBackground" BorderThickness="0">
                <Grid Grid.Row="2" Grid.ColumnSpan="4" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>

                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>


                    </Grid.RowDefinitions>
                    <TextBox Grid.Row="0"   Grid.Column="1" x:Name="spousefirstnameTextBox"  Margin="2,30,40,2"  Padding="2"/>
                    <TextBox Grid.Row="0"   Grid.Column="3" x:Name="spouseoccupationTextBox"  Margin="2,30,40,2"  Padding="2"/>
                    <TextBox Grid.Row="1"   Grid.Column="1" x:Name="spousemiddlenameTextBox"  Margin="2,2,40,2" Padding="2"/>
                    <TextBox Grid.Row="1"   Grid.Column="3" x:Name="spousebussinessnameTextBox"  Margin="2,2,40,2"  Padding="2"/>
                    <TextBox Grid.Row="2"   Grid.Column="1" x:Name="spouselastnameTextBox"  Margin="2,2,40,2" Padding="2"/>
                    <TextBox Grid.Row="2"   Grid.Column="3" x:Name="spousebussinessaddressTextBox"  Margin="2,2,40,2"  Padding="2"/>
                    <TextBox Grid.Row="3"   Grid.Column="1" x:Name="spousecontactnumberTextBox"  Margin="2,2,40,2" Padding="2"/>

                    <TextBox Grid.Row="6"   Grid.Column="1" x:Name="fatherlastnameTextBox"  Margin="2,2,40,2"  Padding="2"/>
                    <TextBox Grid.Row="6"   Grid.Column="3" x:Name="fatherfirstnameTextBox"  Margin="2,2,40,2"  Padding="2"/>
                    <TextBox Grid.Row="7"   Grid.Column="1" x:Name="fathermiddlenameTextBox"  Margin="2,2,40,2" Padding="2"/>
                    <TextBox Grid.Row="7"   Grid.Column="3" x:Name="motherlastnameTextBox"  Margin="2,2,40,2"  Padding="2"/>
                    <TextBox Grid.Row="8"   Grid.Column="1" x:Name="motherfirstnameTextBox"  Margin="2,2,40,2" Padding="2"/>
                    <TextBox Grid.Row="8"   Grid.Column="3" x:Name="mothermiddlenameTextBox"  Margin="2,2,40,2"  Padding="2"/>
                    <TextBox Grid.Row="12"   Grid.Column="1" x:Name="children1TextBox"  Margin="2,2,20,2" Padding="2"/>
                    <TextBox Grid.Row="13"   Grid.Column="1" x:Name="children2TextBox"  Margin="2,2,20,2" Padding="2"/>
                    <TextBox Grid.Row="14"   Grid.Column="1" x:Name="children3TextBox"  Margin="2,2,20,2" Padding="2"/>
                    <TextBox Grid.Row="15"   Grid.Column="1" x:Name="children4TextBox"  Margin="2,2,20,2" Padding="2"/>
                    <TextBox Grid.Row="16"   Grid.Column="1" x:Name="children5TextBox"  Margin="2,2,20,2" Padding="2"/>
                    <TextBox Grid.Row="12"   Grid.Column="2" x:Name="children6TextBox"  Margin="35,2,-20,2" Padding="2"/>
