                    <TextBlock Grid.Row="6"     Grid.Column="0"   Text="Father's Last Name:"  Margin="10,5,0,0"          Padding="2"/>
                    <TextBlock Grid.Row="8"     Grid.Column="0"   Text="Father's Middle Name:"      Margin="10,5,0,0"          Padding="2"/>
                    <TextBlock Grid.Row="7"     Grid.Column="0"   Text="Father's First Name:"          Margin="10,5,0,0"          Padding="2"/>
                    <TextBlock Grid.Row="6"     Grid.Column="2"   Text="Mother's Last Name:"  Margin="10,5,0,0"          Padding="2"/>
                    <TextBlock Grid.Row="8"     Grid.Column="2"   Text="Mother's Middle Name:"      Margin="10,5,0,0"          Padding="2"/>
                    <TextBlock Grid.Row="7"     Grid.Column="2"   Text="Mother's First Name:"          Margin="10,5,0,0"          Padding="2"/>
                    <TextBlock Grid.Row="19"    Grid.Column="1" Grid.ColumnSpan="2" TextAlignment="Center"   Text="Please Enter a Correct Information"          Margin="-14,2,-14,2"          Padding="2"/>


                </Grid>
            </GroupBox>
        </ScrollViewer>
